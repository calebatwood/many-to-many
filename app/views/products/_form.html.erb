<%= form_for @product do |f| %>

     <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
     </p>

     <p>
        <%= f.label :price %>
        <%= f.number_field :price %>
     </p>

      <p>
        <%= f.label :company_id %>
        <%= f.collection_select :company_id, Company.all, :id, :name, {include_blank: "Select a company"} %>
      </p>

<%= f.submit %>

<% end %>
